<h2>Available drones</h2>

{{#each drones}}
	<div class="drone-container">
		<p>{{this.name}}</p>
		<p>{{this.propellers}}</p>
		<p>{{this.maxSpeed}}</p>

		<a href="/drones/{{this._id}}/edit">Edit</a>

		<form action="/drones/{{this._id}}/delete" method="POST">
			<button type="submit">delete</button>
		</form>
	</div>

{{/each}}